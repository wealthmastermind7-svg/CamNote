{
  "expo": {
    "name": "CamNote",
    "slug": "camnote",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "camnote",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.camnote.app",
      "infoPlist": {
        "NSCameraUsageDescription": "CamNote needs camera access to scan your documents"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0C10",
        "foregroundImage": "./assets/images/icon.png"
      },
      "package": "com.camnote.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A0C10",
          "dark": {
            "backgroundColor": "#0A0C10"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "CamNote needs camera access to scan your documents"
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
